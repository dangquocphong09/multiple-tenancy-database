@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form class="form-horizontal" method="post">
    <div class="form-group">
        <label for="Name" class="col-sm-2 control-label">Tên tenant</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="Name" asp-for="tenant.Name">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Tạo</button>
        </div>
    </div>
</form>